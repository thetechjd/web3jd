---
import site from '@data/site';
import '@fontsource/roboto-condensed/400.css';
import '@fontsource/roboto-condensed/700.css';
import '@fontsource/roboto-mono/700.css';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import { SEO } from 'astro-seo';

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const { pathname } = Astro.url;

const { siteUrl, description } = site;
const cannonical = `${siteUrl}${pathname}`;

const { PUBLIC_GOOGLE_SITE_VERIFICATION, PUBLIC_GOOGLE_ANALYTICS_ID } =
  import.meta.env;
---

<head>
  <SEO
    charset="UTF-8"
    title={title}
    titleTemplate="%s | THE WEB3 JD"
    titleDefault="Kevan J. Williams, Esq. | THE WEB3 JD"
    description={description}
    canonical={cannonical}
    openGraph={{
      basic: {
        title: 'THE WEB3 JD',
        type: 'website',
        url: cannonical,
        image: '/banner.png',
      },
      optional: {
        description,
        siteName: 'THE WEB3 JD',
      },
      image: {
        alt: 'THE WEB3 JD',
        width: 1200,
        height: 630,
      },
    }}
    twitter={{
      card: 'summary_large_image',
    }}
    extend={{
      link: [
        { rel: 'icon', href: '/favicon.png', type: 'image/svg+xml' },
        { rel: 'apple-touch-icon', href: '/apple-touch-icon.png' },
        { rel: 'manifest', href: '/site.webmanifest' },
      ],
      meta: [
        { name: 'viewport', content: 'width=device-width, initial-scale=1' },
        { name: 'generator', content: Astro.generator },
        { name: 'theme-color', content: '#6919FF' },
        {
          name: 'google-site-verification',
          content: PUBLIC_GOOGLE_SITE_VERIFICATION,
        },
      ],
    }}
  />
  
</head>
