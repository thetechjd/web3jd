---
import Container from '@components/Container';
import Heading from '@components/text/Heading.astro';
import Paragraph from '@components/text/Paragraph.astro';
import site from '@data/site';
---

<section class="flex min-h-screen w-full items-center py-28">
  <Container>
    <h1
      class="mb-3 font-display text-5xl font-bold leading-tight md:text-7xl md:leading-tight lg:text-8xl lg:leading-tight"
    >
      Imprint
    </h1>
    <address class="grid gap-y-12 not-italic">
      <div>
        <Heading>Details</Heading>
        <Paragraph>
          LOKKEE STUDIOS<br />
          Kilian Peters<br />
          Langenfelderstra√üe 75<br />
          22769 Hamburg, Germany
        </Paragraph>
      </div>
      <div>
        <Heading>Contact</Heading>
        <Paragraph>
          E-Mail:
          <a
            href={`mailto:${site.email}`}
            title="Hit me up"
            class="border-b border-current transition-colors hover:text-primary"
          >
            {site.email}</a
          >
        </Paragraph>
      </div>
      <div>
        <Heading>Content responsibility</Heading>
        <Paragraph>Kilian Peters</Paragraph>
      </div>
    </address>
  </Container>
</section>
